@model Vidly.ViewModel.MoviesViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
                Movie
            </th>
            <th scope="col">
                Genre
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>

