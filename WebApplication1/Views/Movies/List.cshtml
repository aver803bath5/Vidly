@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<div>
    @Html.ActionLink("new movie", "New", "Movies", null, new { @class = "btn btn-primary" })
</div>

<table id="movies" class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
                Movie
            </th>
            <th scope="col">
                Genre
            </th>
            <th scope="col">
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return `<a href="/movies/edit/${movie.id}">${data}</a>`;
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return `<button data-movie-id="${data}" class="btn-link js-delete">Delete</button>`;
                        }
                    }
                ]
            });

            // Delete movie
            $("#movies").on("click",
                ".js-delete",
                function() {
                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this movie?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: `/api/movies/${button.data("movie-id")}`,
                                    method: "DELETE",
                                    success: function() {
                                        table.row(button.parents("tr")).remove().draw();
                                    }
                                });
                            }
                        });
                });
        });

    </script>
}
